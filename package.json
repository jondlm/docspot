  "license": "MIT",
  "dependencies": {
    "boom": "^2.8.0",
    "bunyan": "^1.4.0",
    "fs-extra": "^0.24.0",
    "good": "^6.2.0",
    "good-bunyan": "0.0.1",
    "handlebars": "^3.0.3",
    "hapi": "^8.6.1",
    "joi": "^6.5.0",
    "lodash": "^3.10.1",
    "lout": "^6.2.2",
    "mkdirp": "^0.5.1",
    "nconf": "^0.7.1",
    "react": "^0.13.3",
    "tar-fs": "^1.8.1",
    "tar.gz": "^1.0.1"
  },
  "devDependencies": {
    "babelify": "^6.1.3",
    "browserify": "^10.2.4",
